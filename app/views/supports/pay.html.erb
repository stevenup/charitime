    <div class="sum">
      ￥<%= '%.2f' % (@support.money / 100) %><span class="m-l">元</span>
    </div>
    <button id="dedicate-confirm-btn" class="btn btn-default btn-highlight btn-middle m-l m-r p-t p-b" data-id="<%= @support.id %>">立即支付</button>
