<div id="my-address" class="my-address">
  <% @addresses.each do |addr| %>
    <div class="address-item p-l p-r p-t p-b">
      <p class="name"><%= addr.name %></p>

      <p class="tel"><%= addr.phone_number %></p>

      <p class="address"><%= addr.province.to_s + addr.city.to_s + addr.district.to_s + addr.detail_info.to_s %></p>
    </div>
  <% end %>
</div>

<%= link_to new_address_path do %>
  <button class="btn btn-default btn-highlight m-l m-r p-t p-b">添加地址</button>
<% end %>
