<div class="projects" id="projects">
  <div class="project-list">
    <% if @projects != [] %>
      <% @projects.each do |ele| %>
        <%= link_to detail_project_path ele.id do %>
          <div class="project-item m-b">
            <div class="project-pic">
              <%= image_tag ele.banner %>
            </div>
          </div>
        <% end %>
      <% end  %>
    <% end %>
  </div>
</div>

<%= render template: 'shared/tabs' %>

<%= content_for :title, set_title('GOODBUY公益商城 | 优活') %>

<script>
  $(document).ready(function () {
    var host_url     =  'http://' + window.location.href.split('//')[1].split('/')[0] + '/';
    var current_url  = host_url + 'projects';

    wx.ready(function () {
      wx.onMenuShareTimeline({
        title: 'GOODBUY公益商城', // 分享标题
        link: current_url,
        imgUrl: host_url + 'logo.png', // 分享图标
        success: function () {
          // 用户确认分享后执行的回调函数
        },
        cancel: function () {
          // 用户取消分享后执行的回调函数
        }
      });

      wx.onMenuShareAppMessage({
        title: 'GOODBUY公益商城', // 分享标题
        desc: '快来看看优秀的公益项目和创意新潮的产品吧', // 分享描述
        link: current_url,
        imgUrl: host_url + 'logo.png', // 分享图标
        type: '', // 分享类型,music、video或link，不填默认为link
        dataUrl: '', // 如果type是music或video，则要提供数据链接，默认为空
        success: function () {
          // 用户确认分享后执行的回调函数
        },
        cancel: function () {
          // 用户取消分享后执行的回调函数
        }
      });
    });

  })

</script>