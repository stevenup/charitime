<div class="smart-widget">
  <div class="smart-widget-header">
    <h4>订单查询</h4>
  </div>
  <div class="smart-widget-inner">
    <div class="smart-widget-body">
      <div class="row">
        <%= form_tag '', url: '', html: {class: 'form-horizontal'} do |f| %>
          <div class="col-md-2">
            <%= text_field_tag :user_id, nil, class: 'form-control', placeholder: '用户id' %>
          </div>

          <div class="col-md-2">
            <%= text_field_tag :order_id, nil, class: 'form-control', placeholder: '订单编号' %>
          </div>

          <div class="col-md-2">
            <%= select_tag :order_status, "<option value='UNDELIVERED'>UNDELIVERED</option><option value='COMPLETED'>COMPLETED</option><option value='REFUNDED'>REFUNDED</option>", class: 'form-control', prompt: '- 请选择订单状态 -' %>
          </div>

          <div class="col-md-2">
            <%= text_field_tag :start_date, nil, id: 'datetimepicker1', class: 'form-control', placeholder: '起始时间' %>
          </div>

          <div class="col-md-2">
            <%= text_field_tag :end_date, nil, id: 'datetimepicker2', class: 'form-control', placeholder: '结束时间' %>
          </div>

          <div class="col-md-1">
            <%= submit_tag '查  询', class: "btn btn-primary" %>
          </div>

          <div class="col-md-1">
            <button class="btn btn-primary">导  出</button>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>

<div class="wrapper-md">
  <div class="panel panel-default">
    <div class="table-responsive">
      <%= dt id: 'orders_datatable', class: 'table table-striped b-t b-b', :'data-url' => admin_orders_path(:format => :json) do %>
        <%= dt_col(Order.hn(:user_id), data: {data: 'user_id'}) %>
        <%= dt_col(Order.hn(:order_id), data: {data: 'order_id'}) %>
        <%= dt_col(Order.hn(:order_status), data: {data: 'order_status'}) %>
        <%= dt_col(Order.hn(:total_price), data: {data: 'total_price'}) %>
        <%= dt_col(Order.hn(:created_at), data: {data: 'created_at'}) %>
        <%= dt_col(Product.hn(:action), data: {data: 'actions'}) %>
      <% end %>
    </div>
  </div>
</div>

<% content_for :scripts do %>
  <%= controller_js_include %>
<% end %>

<script>
  $('#datetimepicker1').datetimepicker();
  $('#datetimepicker2').datetimepicker();
</script>