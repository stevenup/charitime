                  <%= dt_col(Product.hn(:product_category), data: {data: 'product_category_id'}) %>
                  <%= dt_col(Product.hn(:product_label), data: {data: 'product_label_id'}) %>
                  <%= dt_col(Product.hn(:product_detail), data: {data: 'product_detail'}) %>
                  <%= dt_col(Product.hn(:created_at), data: {data: 'created_at'}) %>
                  <%= dt_col(Product.hn(:on_shelf), data: {data: 'on_shelf'}) %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
