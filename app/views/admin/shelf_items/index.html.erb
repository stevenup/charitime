<div class="smart-widget">
  <div class="smart-widget-inner">

    <%= render 'admin/shelf_items/shared/tabs' %>

    <div class="smart-widget-body">
      <div class="tab-content">
        <div class="tab-pane fade in active" id="style2Tab1">
          <div class="wrapper-md">
            <div class="panel panel-default">
              <div class="table-responsive">
                <%= dt id: 'shelf_items_datatable', class: 'table table-striped b-t b-b', :'data-url' => admin_shelf_items_path(:format => :json) do %>
                  <%= dt_col(Product.hn(:product_id), data: {data: 'product_id'}) %>
