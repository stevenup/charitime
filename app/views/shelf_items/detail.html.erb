<div id="overlay"></div>

<div class="shelf-item-detail">
  <div class="big-thumb">
    <%= image_tag '1.png' %>
  </div>

  <div class="main">
    <div class="main-left">
      <div class="price">
        <span class="big-price">￥<%#= @shelf_item.shelf_item_price %>  </span>
        <span class="coin">0公益币</span>
      </div>

      <div class="info">
        <dl class="dl-clear">
          <dt>销量：</dt>
          <dd>20件</dd>
        </dl>

        <dl class="dl-clear">
          <dt>好评：</dt>
          <dd>100%</dd>
        </dl>

        <dl class="dl-clear">
          <dt>数量：</dt>
          <dd>100</dd>
        </dl>
        <p class="stock">（库存1000件）</p>

      </div>

      <div class="count"></div>
    </div>

    <div class="main-right">
      <ul class="attrs">
        <li>包邮</li>
        <li>可使用公益币</li>
        <li>可获得公益币</li>
        <li>公益项目</li>
      </ul>
    </div>
  </div>

  <div class="nav">
    <ul>
      <li><%= link_to '商品详情', 'javascript:;', class: 'detail' %>
        <span class="split"></span>
      <li><%= link_to '评论', '#', class: 'comments' %>
    </ul>
  </div>

  <div class="detail-body m-t m-b m-r m-l p-r p-l p-t p-b">
    <%= @shelf_item.product_detail.to_s.html_safe %>
  </div>

  <div class="buttons">
    <button id="click-to-buy" class="btn btn-default btn-highlight m-l m-r p-t p-b">立即购买</button>
    <button class="btn btn-default m-l m-r p-t p-b">加入购物车</button>
  </div>

</div>

<div class="confirm-box p-l p-r" id="confirm-box">
  <div class="item-properties">

  </div>

  <div class="delivery-addr">
    <p class="inline-block">九个太阳</p>

    <p class="inline-block">15066666666</p>

    <p>中国上海徐汇现代大厦502B室探索公益</p>
  </div>

  <div class="item-number" data-trigger="spinner">
    <p>购买数量：</p>
    <a href="javascript:;" data-spin="down" class="minus">-</a>
    <input type="text" value="1" data-rule="quantity" data-max="10" class="number">
    <a href="javascript:;" data-spin="up" class="plus">+</a>
  </div>

  <div class="buttons">
    <button id="confirm" class="btn btn-default btn-highlight m-l m-r p-t p-b">确定提交</button>
  </div>

</div>

<script>
  $(document).ready(function () {
    $('#click-to-buy').on('click', function () {
      $('#overlay').fadeIn('fast', function () {
        $('#confirm-box').animate({height: 'toggle'}, 'fast')
      })
    });
    $('#overlay').on('click', function () {
      $('#confirm-box').animate({height: 'toggle'}, 'fast', function () {
        $('#overlay').fadeOut('fast')
      })
    })
  })
</script>
